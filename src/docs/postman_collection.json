  "item": [
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sachin\",\n  \"email\": \"sachin@example.com\",\n  \"password\": \"mypassword\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "auth", "register"]
        }
      },
      "response": [
        {
          "name": "Register Success",
          "status": "Created",
          "code": 201,
          "body": "{\n  \"message\": \"User registered successfully\",\n  \"user\": {\n    \"id\": 1,\n    \"name\": \"Sachin\",\n    \"email\": \"sachin@example.com\",\n    \"upi_id\": \"sachin@upi\"\n  }\n}"
        },
        {
          "name": "Register Fail (User Exists)",
          "status": "Bad Request",
          "code": 400,
          "body": "{\n  \"message\": \"User already exists\"\n}"
        }
      ]
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"sachin@example.com\",\n  \"password\": \"mypassword\"\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "auth", "login"]
        }
      },
      "response": [
        {
          "name": "Login Success",
          "status": "OK",
          "code": 200,
          "body": "{\n  \"message\": \"Login successful\",\n  \"token\": \"<JWT_TOKEN>\"\n}"
        },
        {
          "name": "Login Fail (Invalid Password)",
          "status": "Bad Request",
          "code": 400,
          "body": "{\n  \"message\": \"Invalid credentials\"\n}"
        }
      ]
    },
    {
      "name": "Get Profile",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/auth/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "auth", "profile"]
        }
      },
      "response": [
        {
          "name": "Profile Success",
          "status": "OK",
          "code": 200,
          "body": "{\n  \"user\": {\n    \"id\": 1,\n    \"name\": \"Sachin\",\n    \"email\": \"sachin@example.com\",\n    \"upi_id\": \"sachin@upi\"\n  }\n}"
        },
        {
          "name": "Profile Unauthorized (No Token)",
          "status": "Unauthorized",
          "code": 401,
          "body": "{\n  \"message\": \"No token provided\"\n}"
        },
        {
          "name": "Profile Forbidden (Invalid Token)",
          "status": "Forbidden",
          "code": 403,
          "body": "{\n  \"message\": \"Invalid token\"\n}"
        }
      ]
    },
    {
      "name": "Link Bank Account",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account_number\": \"1234567890\",\n  \"ifsc\": \"SBIN0001234\",\n  \"balance\": 5000.00\n}"
        },
        "url": {
          "raw": "http://localhost:4000/api/bank/link",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "bank", "link"]
        }
      },
      "response": [
        {
          "name": "Link Account Success",
          "status": "Created",
          "code": 201,
          "body": "{\n  \"message\": \"Bank account linked successfully\",\n  \"account\": {\n    \"id\": 1,\n    \"account_number\": \"1234567890\",\n    \"ifsc\": \"SBIN0001234\",\n    \"balance\": \"5000.00\"\n  }\n}"
        },
        {
          "name": "Link Account Fail (Duplicate)",
          "status": "Bad Request",
          "code": 400,
          "body": "{\n  \"message\": \"Account number already linked\"\n}"
        }
      ]
    },
    {
      "name": "Get Bank Accounts & Balances",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "http://localhost:4000/api/bank/balance",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["api", "bank", "balance"]
        }
      },
      "response": [
        {
          "name": "Get Balances Success",
          "status": "OK",
          "code": 200,
          "body": "{\n  \"accounts\": [\n    {\n      \"id\": 1,\n      \"account_number\": \"1234567890\",\n      \"ifsc\": \"SBIN0001234\",\n      \"balance\": \"5000.00\"\n    }\n  ]\n}"
        },
        {
          "name": "No Accounts Found",
          "status": "OK",
          "code": 200,
          "body": "{\n  \"accounts\": []\n}"
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "" }
